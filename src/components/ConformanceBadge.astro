---
interface Props {
  level: 0 | 1 | 2 | 3 | 4;
}

const { level } = Astro.props;

const labels: Record<number, string> = {
  0: 'Level 0: Core',
  1: 'Level 1: Lifecycle',
  2: 'Level 2: Scheduling',
  3: 'Level 3: Workflows',
  4: 'Level 4: Full',
};
---

<span class={`conformance-badge level-${level}`}>
  {labels[level]}
</span>
